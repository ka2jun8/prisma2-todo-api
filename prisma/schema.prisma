generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://prisma:prisma@localhost:5432/prisma?schema=public"
}

model TodoItem {
  todo_id Int    @id @default(autoincrement())
  text    String
  user_id User
}

model User {
  user_id   Int        @id @default(autoincrement())
  name      String
  todoItems TodoItem[]
}

